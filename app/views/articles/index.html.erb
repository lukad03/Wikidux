<h1>Articles</h1>

<% @articles.each do |article| %>
  <div class="article">
    <h1><%= link_to article.title, article %></h1>
    <% article.categories.each do |category| %>
      <%= link_to category.name, category_path(category) %>
    <% end %>
    <p><%= article.content %></p>
    <%= link_to "Read Article", article %>
  </div>
<% end %>

