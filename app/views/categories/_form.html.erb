<%= form_for @category, :html => { :class => 'form-horizontal' } do |category| %>
  <div class="control-group">
    <%= category.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= category.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= category.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn' %>
  </div>
<% end %>
